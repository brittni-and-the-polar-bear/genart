{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",

    /* Modules */
    "module": "es6",
    "moduleResolution": "node",
    "rootDirs": [
      "./src"
    ],
    "paths": {
      "color": ["./src/main/color"],
      "color-contrast": ["./src/main/color/color-contrast"],
      "discriminator": ["./src/main/discriminator"],
      "geometry": ["./src/main/geometry"],
      "map": ["./src/main/map"],
      "math": ["./src/main/math"],
      "palette": ["./src/main/color/palette"],
      "palette-colors": ["./src/main/color/palette/palette-colors"],
      "palettes": ["./src/main/color/palette/palettes"],
      "random": ["./src/main/random"],
      "screen": ["./src/main/screen"],
      "shapes": ["./src/main/shapes"],
      "sketch-context": ["./src/main/sketch"],
      "unit-test/shared": ["./src/test/shared"]
    },

    /* JSON Modules */
    "resolveJsonModule": true,
    "resolvePackageJsonExports": false,
    "resolvePackageJsonImports": false,

    /* Emit */
    "outDir": "./out/compiled",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "noEmitOnError": true,
    "preserveConstEnums": true,

    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "allowUnreachableCode": false
  }
}
