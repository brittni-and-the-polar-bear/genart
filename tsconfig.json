{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es6",
    "paths": {
      "@batpb/genart": [
        "./src"
      ],
      "@batpb/color": [
        "./src/color"
      ],
      "@batpb/p5-lib": [
        "./src/p5"
      ]
    },

    /* Modules */
    "module": "es6",
    "moduleResolution": "node",
    "rootDirs": [
      "./src",
      "./tests"
    ],
    /* Emit */
    "outDir": "./out/dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "preserveConstEnums": true,
    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "allowUnreachableCode": false
  }
}
